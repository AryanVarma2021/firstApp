<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp"
        android:layout_margin="16dp" />


    <ImageView
        android:id="@+id/user_img"
        android:elevation="18dp"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toStartOf="@id/card"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/a"/>

    <TextView
        android:id="@+id/user_name"
        android:elevation="18dp"
        app:layout_constraintStart_toEndOf="@id/user_img"
        app:layout_constraintTop_toTopOf="@id/card"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aryan Varma"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#717274"
        android:textSize="18sp"
        android:elevation="18dp"
        app:layout_constraintTop_toTopOf="@id/card"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@id/card"

        android:text="16:50"/>
    <TextView
        android:id="@+id/user_address"
        android:elevation="18dp"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toEndOf="@id/user_img"
        app:layout_constraintEnd_toStartOf="@id/time"
        android:layout_width="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:text="123 Main St. Apt. 456 An, USA 12345"
        android:textColor="@color/lightgrey"
        android:textSize="14sp"/>

    <ImageView

        android:id="@+id/img_battery"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        app:layout_constraintStart_toStartOf="@id/card"
        android:layout_width="30dp"
        android:elevation="18dp"
        android:layout_marginLeft="25dp"
        android:layout_height="30sp"
        android:src="@drawable/battery"/>
    <TextView
        android:id="@+id/textbattery"
        android:elevation="18dp"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        app:layout_constraintStart_toEndOf="@id/img_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/lightgrey"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="90%"/>

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="18dp"
        android:src="@drawable/location"
        app:layout_constraintStart_toEndOf="@id/textbattery"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/textlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.8KM"
        android:textSize="15sp"
        android:textColor="@color/lightgrey"
        android:elevation="18dp"
        app:layout_constraintStart_toEndOf="@id/img_location"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/img_wifi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/wifi"
        android:elevation="18dp"
        app:layout_constraintStart_toEndOf="@id/textlocation"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/textwifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Signal"
        android:elevation="18dp"
        android:textSize="12sp"
        android:textColor="@color/lightgrey"
        app:layout_constraintStart_toEndOf="@id/img_wifi"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="7dp"/>
    <ImageView
        android:id="@+id/call"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/call"
        android:elevation="18dp"
        app:layout_constraintStart_toEndOf="@id/textwifi"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>